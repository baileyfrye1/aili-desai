---
import { Picture } from "astro:assets";
import heroImage from '../assets/hero-image3.webp'
---
<section id="hero" class="hero">
    <Picture src={heroImage} layout="constrained" formats={["webp", "avif"]} alt="Aili playing a piano" class="hero__image" loading="eager" />
</section>

<style lang="scss">
    @use "../styles/mixins" as m;
    .hero {
        height: 100vh;
        position: relative;
        z-index: 0;
        &::after {
            @include m.pseudo-fill;
            background-color: black;
            opacity: 0.3;
            z-index: 1;
        }

        &__image {
            height: 100%;
            object-fit: cover;
            object-position: 20%;
        }
    }
</style>
