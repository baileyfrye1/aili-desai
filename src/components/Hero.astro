---
import { Image } from "astro:assets";
import heroImage from '../assets/hero-image.jpg'
---
<section class="hero">
    <Image src={heroImage} alt="Aili playing a piano" class="hero__image" />
</section>

<style lang="scss">
    @use "../styles/mixins" as m;
    .hero {
        height: 100vh;
        position: relative;
        z-index: 0;
        &::after {
            @include m.pseudo-fill;
            background-color: var(--clr-dark-700);
            opacity: 0.2;
            z-index: 1;
        }

        &__image {
            height: 100%;
            object-fit: cover;
        }
    }
</style>
