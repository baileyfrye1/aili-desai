---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import '../styles/global.scss'

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Aili Desai is a composer specializing in film, TV, and media music. Discover her work, listen to original compositions, and connect for creative collaborations.">

    <meta property="og:type" content="website" />
    <meta property="og:title" content="Aili Desai Composer Portfolio" />
    <meta property="og:description" content="Aili Desai is a film and media composer creating emotionally rich, story-driven music for film, television, and media. Explore her work, background, and latest compositions." />
    <meta property="og:url" content="https://ailidesai.com/" />
    <!-- <meta property="og:image" content="https://ailidesai.com/og-image.jpg" /> -->

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Aili Desai Composer Portfolio" />
    <meta name="twitter:description" content="Aili Desai is a film and media composer creating emotionally rich, story-driven music for film, television, and media. Explore her work, background, and latest compositions." />
    <!-- <meta name="twitter:image" content="https://ailidesai.com/og-image.jpg" /> -->

    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" href="/favicon.ico">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <title>{title}</title>
</head>
<body>
    <Navbar /> 
    <main>
        <slot />
    </main>
    <Footer />
</body>
</html>
